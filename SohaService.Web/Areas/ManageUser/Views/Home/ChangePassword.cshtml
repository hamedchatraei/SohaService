@model SohaService.Core.DTOs.User.ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/UserPanel/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/UserPanel/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/UserPanel/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="/UserPanel/css/style.css">
    <script src="/UserPanel/js/jquery.min.js"></script>
</head>
<body>
    <script src="/UserPanel/js/modernizr-custom.js"></script>

    <main>
        <div class="container">
            <div class="user-account">
                <div class="row">
                    <partial name="_SideBar" />
                    <div class="col-md-9 col-sm-8 col-xs-12">
                        <section class="user-account-content">
                            <header><h1> تغییر کلمه عبور </h1></header>
                            <div class="inner form-layer">
                                <form asp-action="ChangePassword" method="post">
                                    @if (ViewBag.IsSuccess != null)
                                    {
                                        <div class="alert alert-success">
                                            کلمه عبور شما با موفقیت ویرایش شد
                                        </div>
                                    }

                                    <div class="row">
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="username"><i class="zmdi zmdi-key"></i></span>
                                                <input type="password" class="form-control" asp-for="OldPassword" placeholder="کلمه عبور فعلی" aria-describedby="username">
                                            </div>
                                        </div>
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-key"></i></span>
                                                <input type="password" class="form-control" asp-for="Password" placeholder="کلمه عبور جدید" aria-describedby="email-address">
                                            </div>
                                        </div>
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-key"></i></span>
                                                <input type="password" class="form-control" asp-for="RePassword" placeholder="تکرار کلمه عبور جدید" aria-describedby="email-address">
                                            </div>
                                        </div>
                                        <div class="text-danger" asp-validation-summary="All"></div>
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <button class="btn btn-success"> تغییر کلمه عبور </button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/UserPanel/js/bootstrap.min.js"></script>
    <script src="/UserPanel/js/script.js"></script>
</body>
</html>

