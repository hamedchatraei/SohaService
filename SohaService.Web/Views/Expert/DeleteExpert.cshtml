@model SohaService.DataLayer.Entities.Expert.Expert

@{
    ViewData["Title"] = "حذف کارشناس";
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی @Model.ExpertName @Model.ExpertFamily</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationExpert/@Model.ExpertId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a"><a href="/EditExpert/@Model.ExpertId"> ویرایش </a></button></li>
                                        <li><button class="button-a button-a-Active"><a href="/DeleteExpert/@Model.ExpertId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>حذف کارشناس</h1>
                        </header>
                        <div class="container alert alert-danger text-center" style="width: 50%; margin:10px 25% 10px">

                            <form method="post">
                                <input type="hidden" asp-for="ExpertId" />
                                <h2> آیا از حذف @Model.ExpertName @Model.ExpertFamily مطمئن هستید ؟! </h2>
                                <p style="margin:10px 0 0">
                                    <input type="submit" value=" حذف کن " class="btn btn-outline btn-danger" />
                                </p>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

