@model SohaService.Core.DTOs.Unit.UnitStatusViewModel

@{
    ViewData["Title"] = "وضعیت قطعه";
}

<div class="row">
    <form>
        <div class="col-sm-5 col-md-5">
            <input type="text" name="filterTitle" class="form-control" placeholder="وضعیت" />
        </div>
        <div class="col-sm-2 col-md-2" style="margin: 10px 0 0">
            <button type="submit" class="btn btn-info">بگرد</button>
            <a class="btn btn-default btn-sm" href="/UnitStatuses">خالی</a>
        </div>
    </form>
</div>
<div class="col-md-12" style="margin: 10px 0;">

    <a href="/AddUnitStatus" class="btn btn-outline btn-success">افزودن وضعیت جدید</a>

</div>

<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <thead>
    <tr class="success">
        <th class="text-center">وضعیت</th>
        <th class="text-center">دستورات</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model.UnitStatus)

    {
        <tr>
            <td>@item.UnitStatusTitle</td>
            <td>
                <a href="/InformationUnitStatus/@item.UnitStatusId" class="btn btn-primary btn-sm">
                    صفحه مشخصات
                </a>
            </td>
        </tr>
    }

    </tbody>
</table>

<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="paginate_button @((i == Model.CurrentPage) ? "active" : "")" aria-controls="dataTables-example" tabindex="0">
                        <a href="/UnitStatuses?PageId=@i">@i</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>



