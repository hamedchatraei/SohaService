@model SohaService.DataLayer.Entities.Unit.Unit

@{
    ViewData["Title"] = "ویرایش قطعه";
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی @Model.UnitName</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationUnit/@Model.UnitId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a button-a-Active"><a href="/EditUnit/@Model.UnitId"> ویرایش </a></button></li>
                                        <li><button class="button-a"><a href="/DeleteUnit/@Model.UnitId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>ویرایش قطعه</h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-action="EditUnit" method="post">
                                <input type="hidden" asp-for="UnitId" />
                                <div class="row">
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">نام قطعه</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" asp-for="UnitName">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

