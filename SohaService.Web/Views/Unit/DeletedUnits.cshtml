@model SohaService.Core.DTOs.Unit.UnitViewModel

@{
    ViewData["Title"] = "قطعه های حذف شده";
}

<div class="row">
    <form>
        <div class="col-sm-5 col-md-5">
            <input type="text" name="filterName" class="form-control" placeholder="نام قطعه" />
        </div>
        <div class="col-sm-2 col-md-2" style="margin: 10px 0 0">
            <button type="submit" class="btn btn-info">بگرد</button>
            <a class="btn btn-default btn-sm" href="/DeletedUnits">خالی</a>
        </div>
    </form>
</div>

<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <thead>
    <tr class="success">
        <th class="text-center">نام قطعه</th>
        <th class="text-center">دستورات</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model.Units)

    {
        <tr>
            <td>@item.UnitName</td>
            <td>
                <a href="/InformationUnit/@item.UnitId" class="btn btn-primary btn-sm">
                    صفحه مشخصات
                </a>
            </td>
        </tr>
    }

    </tbody>
</table>

<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="paginate_button @((i == Model.CurrentPage) ? "active" : "")" aria-controls="dataTables-example" tabindex="0">
                        <a href="/DeletedUnits?PageId=@i">@i</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>


