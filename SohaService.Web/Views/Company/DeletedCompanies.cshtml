@model SohaService.Core.DTOs.Company.CompanyViewModel

@{
    ViewData["Title"] = "شرکت های حذف شده";
}

<div class="row">
    <form>
        <div class="col-sm-5 col-md-5">
            <input type="text" name="filterName" class="form-control" placeholder="نام شرکت" />
        </div>
        <div class="col-sm-5 col-md-5">
            <input type="text" name="filterPhone" class="form-control" placeholder="تلفن شرکت" />
        </div>
        <div class="col-sm-2 col-md-2" style="margin: 10px 0 0">
            <button type="submit" class="btn btn-info">بگرد</button>
            <a class="btn btn-default btn-sm" href="/DeletedCompanies">خالی</a>
        </div>
    </form>
</div>

<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <thead>
        <tr class="success">
            <th class="text-center">نام شرکت</th>
            <th class="text-center">تلفن شرکت</th>
            <th class="text-center">آدرس شرکت</th>
            <th class="text-center">دستورات</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Companies)

        {
            <tr>
                <td>@item.CompanyName</td>
                <td>@item.CompanyPhone</td>
                <td>@item.CompanyAddress</td>
                <td>
                    <a href="/InformationCompany/@item.CompanyId" class="btn btn-primary btn-sm">
                        صفحه مشخصات
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="paginate_button @((i == Model.CurrentPage) ? "active" : "")" aria-controls="dataTables-example" tabindex="0">
                        <a href="/DeletedCompanies?PageId=@i">@i</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>

