@model SohaService.DataLayer.Entities.Customer.Customer

@{
    ViewData["Title"] = "حذف مشتری";
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی @Model.CustomerName / @Model.CustomerFamily</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationCustomer/@Model.CustomerId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a"><a href="/EditCustomer/@Model.CustomerId"> ویرایش </a></button></li>
                                        <li><button class="button-a button-a-Active"><a href="/DeleteCustomer/@Model.CustomerId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"><a href="/CustomersOrder/@Model.CustomerId"> سفارشات </a></button></li>
                                    <li><button class="button-a"><a href="/CustomersRepair/@Model.CustomerId"> تعمیرات </a></button></li>
                                    <li><button class="button-a"><a href="/CustomersPay/@Model.CustomerId"> پرداخت ها </a></button></li>
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>حذف مشتری</h1>
                        </header>
                        <div class="container alert alert-danger text-center" style="width: 50%; margin:10px 25% 10px">

                            <form method="post">
                                <input type="hidden" asp-for="CustomerId" />
                                <h2> آیا از حذف @Model.CustomerName @Model.CustomerFamily مطمئن هستید ؟! </h2>
                                <p style="margin:10px 0 0">
                                    <input type="submit" value=" حذف کن " class="btn btn-outline btn-danger" />
                                </p>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

