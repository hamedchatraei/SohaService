@using SohaService.Core.Convertor
@model SohaService.Core.DTOs.Repair.InformationRepairViewModel

@{
    ViewData["Title"] = "مشخصات تعمیرات";
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی سفارش @Model.CustomersNameFamily در تاریخ @Model.ReceivedUnitDate.ToShamsi()</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a button-a-Active"><a href="/InformationRepair/@Model.RepairId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        @if (Model.IsReady)
                                        {
                                            <li><button class="button-a"><a href="/EditRepair/@Model.RepairId"> ویرایش </a></button></li>
                                        }
                                        else if (Model.IsRepair)
                                        {
                                            <li><button class="button-a"><a href="/EditRepairedRepair/@Model.RepairId"> ویرایش </a></button></li>
                                        }
                                        else if (Model.IsSend)
                                        {
                                            <li><button class="button-a"><a href="/EditDoneRepair/@Model.RepairId"> ویرایش </a></button></li>
                                        }
                                        <li><button class="button-a"><a href="/DeleteRepair/@Model.RepairId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> اطلاعات کامل </h1>
                        </header>
                        <div class="inner form-layer">
                            <div class="row">
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">تاریخ دریافت قطعه</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" value="@Model.ReceivedUnitDate.ToShamsi()" disabled="disabled">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">وضعیت تعمیر</span>
                                    </div>
                                </div>
                                @if (Model.IsReady)
                                {
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="در دست تعمیر" disabled="disabled">
                                        </div>
                                    </div>
                                }
                                else if (Model.IsRepair)
                                {
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="تعمیر شده" disabled="disabled">
                                        </div>
                                    </div>
                                }
                                else if (Model.IsSend)
                                {
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="انجام شده" disabled="disabled">
                                        </div>
                                    </div>
                                }
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">زمان برآورد شده ارسال قطعه</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" value="@Model.EstimatedToSendUnitDate.ToShamsi()" disabled="disabled">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">هزینه برآورد شده</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" value="@Model.EstimatedAmount.ToRial()" disabled="disabled">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">قطعه</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" asp-for="UnitName" disabled="disabled">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">شرکت</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" asp-for="CompanyName" disabled="disabled">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">شرح خرابی</span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <textarea class="form-control no-resiaze" rows="5" asp-for="DamageDescription" disabled="disabled"></textarea>
                                    </div>
                                </div>
                                @if (Model.IsRepair)
                                {
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تاریخ تعمیر</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.RepairDate.ToShamsi()" disabled="disabled">
                                        </div>
                                    </div>
                                }
                                @if (Model.IsSend)
                                {
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">هزینه قطعی</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.FinalAmount.ToRial()'" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تخفیف</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.Discount.ToRial()" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">هزینه کل</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.TotalCost.ToRial()" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">پرداخت اولیه</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.ReceivedAmount.ToRial()" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">هزینه باقی مانده</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.RemainingAmount.ToRial()" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تاریخ ارسال قطعه</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" value="@Model.SendUnitDate.ToShamsi()" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">توضیحات نهایی</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <textarea class="form-control no-resiaze" rows="5" asp-for="DoneDescription" disabled="disabled"></textarea>
                                        </div>
                                    </div>
                                }
                            <div class="col-md-4 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon">کارشناس ثبت کننده</span>
                                </div>
                            </div>
                            <div class="col-md-7 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                    <input type="text" class="form-control" value="@Model.registrant" disabled="disabled">
                                </div>
                            </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

