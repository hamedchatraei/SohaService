@using SohaService.Core.Convertor
@using SohaService.Core.DTOs.Order
@using SohaService.Core.Services.Interfaces
@using SohaService.DataLayer.Entities.Customer
@using SohaService.DataLayer.Entities.User
@model SohaService.DataLayer.Entities.Orders.Order
@inject IOrderService _orderService;
@inject IUserService _userService;

@{
    ViewData["Title"] = "ویرایش سفارش";

    InformationOrderViewModel orderViewModel = _orderService.ShowInformationOrderById(Model.OrderId);

    SohaService.DataLayer.Entities.User.User user = _userService.GetUserByUserName(User.Identity.Name);

    List<int> rols = _userService.GetUserRoles(user.UserId);

    bool isAdmin = false;

    foreach (var item in rols)
    {
        if (item==1)
        {
            isAdmin = true;
        }
    }
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی سفارش @orderViewModel.CustomerNameFamily در تاریخ @orderViewModel.OrderSetDate.ToShamsi()</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationOrder/@Model.OrderId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a button-a-Active"><a href="/EditOrder/@Model.OrderId"> ویرایش </a></button></li>
                                        <li><button class="button-a"><a href="/DeleteOrder/@Model.OrderId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>ویرایش سفارش</h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-action="EditDoneOrder" method="post">
                                <input type="hidden" asp-for="OrderId" />
                                <input type="hidden" asp-for="OrderSetDate" />
                                <input type="hidden" asp-for="OrderChangeLevelDate" />
                                <input type="hidden" asp-for="OrderLevelId" />
                                <input type="hidden" asp-for="EstimatedToSendExpertTime" />
                                <input type="hidden" asp-for="EstimatedAmount" />
                                <input type="hidden" asp-for="EstimatedServiceAmount" />
                                <input type="hidden" asp-for="EstimatedUnitAmount" />
                                @*<input type="hidden" asp-for="FinalAmount" />
                                <input type="hidden" asp-for="Discount" />
                                <input type="hidden" asp-for="TotalCost" />*@
                                <input type="hidden" asp-for="DamageDescription" />
                                @*<input type="hidden" asp-for="ReceivedAmount" />*@
                                <input type="hidden" asp-for="RemainingAmount" />
                                <input type="hidden" asp-for="UnitId" />
                                <input type="hidden" asp-for="CustomerId" />
                                <input type="hidden" asp-for="ConfirmationStatusId" />
                                <input type="hidden" asp-for="WitchOne" />
                                <input type="hidden" asp-for="registrant" />
                                <div class="row">
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">کارشناس</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <select class="form-control" asp-for="ExpertId" asp-items="@(ViewData["experts"] as SelectList)"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">هزینه قطعی</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" onkeyup="separateNum(this.value,this);" onblur="sumInput()" id="finalPrice" aria-describedby="username" placeholder="@Model.FinalAmount.ToRial()" @((isAdmin) ?"" : "disabled")>
                                            <input type="hidden" class="form-control" asp-for="FinalAmount" id="finalFPrice" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تخفیف</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" onkeyup="separateNum(this.value,this);" onblur="sumInput()" id="discountPrice" aria-describedby="username" placeholder="@Model.Discount.ToRial()" @((isAdmin) ?"" : "disabled")>
                                            <input type="hidden" class="form-control" asp-for="Discount" id="finalDiscountPrice" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">هزینه کل</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" id="TotalCost" aria-describedby="username" disabled="disabled" placeholder="@Model.TotalCost.ToRial()">
                                            <input type="hidden" class="form-control" asp-for="TotalCost" id="finalTotalCost" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">پرداخت اولیه</span>
                                        </div>
                                    </div>
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                                <input type="text" class="form-control" onkeyup="separateNum(this.value,this);" name="price" id="price" aria-describedby="username" placeholder="@Model.ReceivedAmount.ToRial()" @((isAdmin) ?"" : "disabled")>
                                                <input type="hidden" class="form-control" asp-for="ReceivedAmount" id="finalRecPrice" aria-describedby="username">
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">توضیحات نهایی</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <textarea class="form-control no-resiaze" rows="5" asp-for="DoneDescription" aria-describedby="username"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success" id="btnSave"> ویرایش اطلاعات </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

<script type="text/javascript">
    function separateNum(value, input) {
        /* seprate number input 3 number */
        var nStr = value + '';
        nStr = nStr.replace(/\,/g, "");
        x = nStr.split('.');
        x1 = x[0];
        x2 = x.length > 1 ? '.' + x[1] : '';
        var rgx = /(\d+)(\d{3})/;
        while (rgx.test(x1)) {
            x1 = x1.replace(rgx, '$1' + ',' + '$2');
        }
        if (input !== undefined) {

            input.value = x1 + x2;
        } else {
            return x1 + x2;
        }
    }


    function sumInput() {

        $(document).ready(function () {
            var myInput = $("#finalPrice");
            var inputValue = myInput.val();

            inputValue = inputValue.replace(/,\s?/g, "");

            if (inputValue !== "") {
            document.getElementById("finalFPrice").value =
                    inputValue;
            }
        });

        $(document).ready(function () {
            var myInput = $("#discountPrice");
            var inputValue = myInput.val();

            inputValue = inputValue.replace(/,\s?/g, "");

            if (inputValue !== "") {
            document.getElementById("finalDiscountPrice").value =
                    inputValue;
            }
        });


        var finalPrice = document.getElementById('finalFPrice').value;
        var discount = document.getElementById('finalDiscountPrice').value;

        var m = finalPrice - discount;

        var total = document.getElementById('TotalCost');

        total.value = m;

        var mm = separateNum(total.value, total);

        total.value = mm.toString();
    }


    $(document).ready(function () {
        var myButton = $("#btnSave");
        var myInput = $("#price");
        myButton.click(function () {
            var inputValue = myInput.val();

            inputValue = inputValue.replace(/,\s?/g, "");

            if (inputValue !== "") {
            document.getElementById("finalRecPrice").value =
                    inputValue;
            }
        });
    });

    $(document).ready(function () {
        var myButton = $("#btnSave");
        var myInput2 = $("#discountPrice");
        myButton.click(function () {
            var inputValue = myInput2.val();

            inputValue = inputValue.replace(/,\s?/g, "");

            if (inputValue !== "") {
            document.getElementById("finalDiscountPrice").value =
                    inputValue;
            }
        });
    });

    $(document).ready(function () {
        var myButton = $("#btnSave");
        var myInput2 = $("#TotalCost");
        myButton.click(function () {
            var inputValue = myInput2.val();

            inputValue = inputValue.replace(/,\s?/g, "");

            if (inputValue !== "") {
            document.getElementById("finalTotalCost").value =
                    inputValue;
            }
        });
    });

</script>

