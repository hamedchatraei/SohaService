@using SohaService.Core.Convertor
@using SohaService.Core.DTOs.Order
@using SohaService.Core.Services.Interfaces
@model SohaService.DataLayer.Entities.Orders.SendToCompany
@inject IOrderService _orderService;

@{
    ViewData["Title"] = "ویرایش برگشت از شرکت";
    InformationSendToCompanyViewModel sendToCompanyView = _orderService.ShowInformationSendToCompanyById(@Model.SendToCompanyId);
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی سفارش @sendToCompanyView.CustomerNameFamily برگشت شده از شرکت @sendToCompanyView.CompanyName در تاریخ @sendToCompanyView.SetDate.ToShamsi()</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationSendToCompany/@Model.SendToCompanyId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a button-a-Active"><a href="/EditBackFromCompany/@Model.SendToCompanyId"> ویرایش </a></button></li>
                                        <li><button class="button-a"><a href="/DeleteBackFromCompany/@Model.SendToCompanyId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>ویرایش سفارش</h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-action="EditBackFromCompany" method="post">
                                <input type="hidden" asp-for="SendToCompanyId" />
                                <input type="hidden" asp-for="OrderId" />
                                <input type="hidden" asp-for="SetDate" />
                                <input type="hidden" asp-for="UnitId" />
                                <input type="hidden" asp-for="Description" />
                                <div class="row">
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">شرکت</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <select class="form-control" asp-for="CompanyId" asp-items="@(ViewData["company"] as SelectList)"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">وضعیت قطعه</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <select class="form-control" asp-for="UnitStatusId" asp-items="@(ViewData["unitStatus"] as SelectList)"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تاریخ برگشت از شرکت</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-time"></i></span>
                                            <input type="datetime" asp-for="ReturnDate" value="@Model.SetDate.ToShamsi()" class="form-control" style="text-align: right" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">تاریخ نصب مجدد</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-time"></i></span>
                                            <input type="datetime" asp-for="AssemblingDate" value="@Model.AssemblingDate.ToShamsi()" class="form-control" style="text-align: right" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success" id="btnSave"> ویرایش اطلاعات </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/BootstrapJalaliDatePicker/bootstrap-datepicker.min.js"></script>
<script src="/BootstrapJalaliDatePicker/bootstrap-datepicker.fa.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('input[type=datetime]').datepicker({ dateFormat: "yy/mm/dd", isRTL: true, showButtonPanel: true });
    });
</script>

