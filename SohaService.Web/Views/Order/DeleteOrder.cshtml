@using SohaService.Core.Convertor
@using SohaService.Core.DTOs.Order
@using SohaService.Core.Services.Interfaces
@model SohaService.DataLayer.Entities.Orders.Order
@inject IOrderService _orderService;

@{
    ViewData["Title"] = "حذف سفارش";

    InformationOrderViewModel orderViewModel = _orderService.ShowInformationOrderById(Model.OrderId);
}

<main>
    <div class="container">
        <div class="user-account">
            <button class="header">صفحه ی سفارش @orderViewModel.CustomerNameFamily در تاریخ @orderViewModel.OrderSetDate.ToShamsi()</button>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <section>
                            <div class="inner">
                                <ul>
                                    <li><button class="button-a"><a href="/InformationOrder/@Model.OrderId"> مشخصات </a></button></li>
                                    @if (Model.IsDelete == false)
                                    {
                                        <li><button class="button-a"><a href="/EditOrder/@Model.OrderId"> ویرایش </a></button></li>
                                        <li><button class="button-a button-a-Active"><a href="/DeleteOrder/@Model.OrderId"> حذف </a></button></li>
                                    }
                                    <li><button class="button-a"> گزارش </button></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1>حذف سفارش</h1>
                        </header>
                        <div class="container alert alert-danger text-center" style="width: 50%; margin:10px 25% 10px">

                            <form method="post">
                                <input type="hidden" asp-for="OrderId" />
                                <h2> آیا از حذف این سفارش مطمئن هستید ؟! </h2>
                                <p style="margin:10px 0 0">
                                    <input type="submit" value=" حذف کن " class="btn btn-outline btn-danger" />
                                </p>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

