            e.preventDefault();
            var date = $(".button-dayOfweek-active .ready-date").text();
            var pageId = $('#currentPage').text();
            var pageNum = Number(pageId) + 1;
            console.log(date, pageNum);
            soha_ajax(date, pageNum);
        });

        $("body").on('click', '.pagination a#aLastPage', function (e) {
            e.preventDefault();
            var date = $(".button-dayOfweek-active .ready-date").text();
            var pageId = $('#pageCount').text();
            console.log(date, pageId);
            soha_ajax(date, pageId);
        });


        $('#ui-datepicker-div').on('click','.ui-datepicker-calendar td a',function(e) {

            $(".button-dayOfweek-active").removeClass("button-dayOfweek-active");
           // $(this).addClass("button-dayOfweek-active");
            var date = $('#pcal1').val();
            console.log(date);
            soha_ajax(date);

        });



        $("body").on('click', '#nextWeek', function () {

            var date = $('.button-dayOfweek-active .ready-date').text();

            $.ajax({
                type: "POST",
                url: "@Url.Action("GetNextWeek")",
                dataType: "text",
                data:
                {
                    date: date,
                    next: true
                },
                success: function(r) {
                    soha_ajax(r);
                }
            });

        });

        $("body").on('click', '#prevWeek', function () {

            var date = $('.button-dayOfweek-active .ready-date').text();

            $.ajax({
                type: "POST",
                url: "@Url.Action("GetNextWeek")",
                dataType: "text",
                data:
                {
                    date: date,
                    next: false
                },
                success: function(r) {
                    soha_ajax(r);
                }
            });

        });

    });
</script>
