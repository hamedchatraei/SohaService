<script>
    $(document).ready(function () {



        function soha_ajax(rd = "",pageId=1) {
            console.log('');
            $.ajax({
                type: "POST",
                url: "@Url.Action("Orders")",
                dataType: "text",
                data:
                {
                    filterCustomerMobile: $('#txtDmg').val(),
                    customerId: $('#sCustomer').val(),
                    unitId: $('#sUnit').val(),
                    estimatedTime: rd,
                    pageId : pageId,
                },
                success: function (msg) {
                    var q = $(msg).find('.days');
                    var qq = $(msg).find('.main-content');
                    $('.days').replaceWith(q);
                    $('.main-content').replaceWith(qq);
                    console.log(q);
                },
                error: function (req, status, error) {
                    console.log(msg);
                }
            });
        }

        function printOrder(today = "") {
            $.ajax({
                type: "POST",
                url: "@Url.Action("PrintOrders")",
                dataType: "text",
                data:
                {
                    date: today
                },
                success: function(r) {
                    $('html').html(r);
                }
            });
        }

        $("#btnPrint").click(function (e) {
            e.preventDefault();

            var date = $(".button-dayOfweek-active .ready-date").text();

            console.log(date);

            printOrder(date);

        });

        $('.form-control').on('input',function() {

            var date = $(".button-dayOfweek-active .ready-date").text();
            console.log($('#pcal1').val());
            soha_ajax(date);

        });

        $("body").on('click','#btnEmpty',function (e) {

            e.preventDefault();

            $('.form-control').val('');
            $(".button-dayOfweek").removeClass("button-dayOfweek-active");
            $(".today").addClass("button-dayOfweek-active");
            soha_ajax($(".days").data("today"));

        });

        $("body").on('click','.button-dayOfweek',function() {

            $(".button-dayOfweek").removeClass("button-dayOfweek-active");
            $(this).addClass("button-dayOfweek-active");
            var date = $(this).find('.ready-date').text();
            console.log(date);
            soha_ajax(date);

        });

        $("body").on('click', '.pagination a#aPage', function (e) {
            e.preventDefault();
            var date = $(".button-dayOfweek-active .ready-date").text();
            var pageId = $(this).text();
            console.log(date, pageId);
            soha_ajax(date, pageId);
        });

        $("body").on('click', '.pagination a#aFirstPage', function (e) {
            e.preventDefault();
            var date = $(".button-dayOfweek-active .ready-date").text();
            var pageId = '1';
            console.log(date, pageId);
            soha_ajax(date, pageId);
        });

        $("body").on('click', '.pagination a#aPreviousPage', function (e) {
            e.preventDefault();
