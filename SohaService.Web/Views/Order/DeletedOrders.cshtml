@using SohaService.Core.Services.Interfaces
@using SohaService.DataLayer.Entities.Orders
@model SohaService.Core.DTOs.Order.OrderViewModel
@inject IOrderService _orderService;

@{
    ViewData["Title"] = "سفارشات حذف شده";
}

<div class="row">
    <form>
        <div class="col-sm-5 col-md-5">
            <input type="text" name="filterDamageDescription" class="form-control" placeholder="شرح خرابی" />
        </div>
        <div class="col-sm-5 col-md-5" style="margin: 10px 0 0">
            <select class="form-control" name="customerId" asp-items="@(ViewData["customers"] as SelectList)"></select>
        </div>
        <div class="col-sm-5 col-md-5" style="margin: 10px 0 0">
            <select class="form-control" name="unitId" asp-items="@(ViewData["units"] as SelectList)"></select>
        </div>
        <div class="col-sm-2 col-md-2" style="margin: 10px 0 0">
            <button type="submit" class="btn btn-info">بگرد</button>
            <a class="btn btn-default btn-sm" href="/DeletedOrders">خالی</a>
        </div>
    </form>
</div>
<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <thead>
        <tr class="success">
            <th class="text-center">مشتری</th>
            <th class="text-center">موبایل</th>
            <th class="text-center">آدرس</th>
            <th class="text-center">قطعه</th>
            <th class="text-center">شرح خرابی</th>
            <th class="text-center">آخرین وضعیت</th>
            <th class="text-center">دستورات</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.InformationOrder)

        {
            <tr>
                <td>@item.CustomerNameFamily</td>
                <td>@item.CustomerMobile</td>
                <td>@item.CustomerAddress</td>
                <td>@item.UnitName</td>
                <td>@item.DamageDescription</td>
                <td>@item.OrderLevelTitle</td>
                <td>
                    @if (item.OrderLevelId == 1 || item.OrderLevelId == 4)
                    {
                        <a href="/InformationOrder/@item.OrderId" class="btn btn-primary btn-sm">
                            صفحه مشخصات
                        </a>
                    }
                    else
                    {


                        SendToCompany send = _orderService.GetSendToCompanyByOrderId(item.OrderId);

                        <a href="/InformationSendToCompany/@send.SendToCompanyId" class="btn btn-primary btn-sm">
                            صفحه مشخصات
                        </a>

                    }
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="paginate_button @((i == Model.CurrentPage) ? "active" : "")" aria-controls="dataTables-example" tabindex="0">
                        <a href="/DeletedOrders?PageId=@i">@i</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>


